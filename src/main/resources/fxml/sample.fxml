<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">
   <children>
      <Label fx:id="label" layoutX="133.0" layoutY="30.0" styleClass="title" text="Please choose game!">
         <font>
            <Font name="Comic Sans MS" size="36.0" />
         </font>
      </Label>
      <Button fx:id="startMineSweeperBtn" layoutX="62.0" layoutY="129.0" mnemonicParsing="false" onAction="#handleStartMineSweeperBtn" styleClass="butt" text="Minesweeper">
         <font>
            <Font name="Comic Sans MS" size="18.0" />
         </font>
      </Button>
      <Button fx:id="startSwapperinoBtn" disable="true" layoutX="407.0" layoutY="129.0" mnemonicParsing="false" styleClass="butt" text="Swapperino">
         <font>
            <Font name="Comic Sans MS" size="18.0" />
         </font>
      </Button>
      <TextField fx:id="usernameTF" layoutX="234.0" layoutY="135.0" promptText="username" styleClass="tf" />
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="45.0" layoutY="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../mine.JPG" />
         </image>
      </ImageView>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="367.0" layoutY="200.0" opacity="0.3" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../swap.JPG" />
         </image>
      </ImageView>
      <Button layoutX="268.0" layoutY="335.0" mnemonicParsing="false" onAction="#handleTopTen" styleClass="butt" text="Top 10">
         <font>
            <Font name="Comic Sans MS" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
